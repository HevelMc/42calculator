{
  "version": "0.2",
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "enableGlobDot": true,
  "words": [
    "tailwindcss",
    "clsx",
    "fortytwo",
    "cursus",
    "dotenv",
    "levelname",
    "lucide",
    "zustand",
  ],
  "useGitignore": true,
  "ignorePaths": [
    "cspell.json",
    ".git/**",
    ".gitignore",
    ".github/workflows/*",
    "package.json",
    "package-lock.json",
    "scripts/**",
    "/src/components/ui/**",
    "src/data/*"
  ]
}
